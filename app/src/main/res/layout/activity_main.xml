<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonConnect"
        android:id="@+id/buttonConnect"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="onMyButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonUp"
        android:id="@+id/buttonUp"
        android:layout_below="@+id/buttonConnect"
        android:layout_toStartOf="@+id/buttonRight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonLeft"
        android:id="@+id/buttonLeft"
        android:layout_below="@+id/buttonUp"
        android:layout_toStartOf="@+id/buttonDown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonDown"
        android:id="@+id/buttonDown"
        android:layout_below="@+id/buttonLeft"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonRight"
        android:id="@+id/buttonRight"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/buttonDown"
        android:layout_toEndOf="@+id/buttonDown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonDisconnect"
        android:id="@+id/buttonDisconnect"
        android:onClick="onDisconnectButtonClick"
        android:layout_above="@+id/buttonUp"
        android:layout_alignStart="@+id/buttonRight" />

</RelativeLayout>
